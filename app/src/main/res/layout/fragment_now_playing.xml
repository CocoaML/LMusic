<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.lalilu.lmusic.state.PlayingFragmentViewModel" />

        <variable
            name="playingAdapter"
            type="com.lalilu.lmusic.adapter.LMusicPlayingAdapter" />

    </data>

    <com.lalilu.lmusic.ui.AntiMisOperationRecyclerView
        android:id="@+id/nowPlayingRecyclerView"
        adapter="@{playingAdapter}"
        setMusicList="@{vm.musicList}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="128dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</layout>
