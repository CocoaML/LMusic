<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.lalilu.lmusic.viewmodel.PlayingViewModel" />

        <variable
            name="ev"
            type="com.lalilu.lmusic.event.SharedViewModel" />

        <variable
            name="adapter"
            type="com.lalilu.lmusic.adapter.PlayingAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.lalilu.lmusic.ui.SquareAppBarLayout
                android:id="@+id/fm_appbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryVariant"
                android:fitsSystemWindows="true"
                app:bgPalette="@{ev.nowBgPalette}">

                <com.lalilu.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/fm_collapse_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:collapsedTitleTextAppearance="@style/collapsedTitleText"
                    app:contentScrim="@android:color/transparent"
                    app:expandedTitleTextAppearance="@style/expandedTitleText"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    app:maxLines="5"
                    app:setSongTitle="@{vm.song}"
                    app:statusBarScrim="@android:color/transparent">

                    <com.lalilu.lmusic.ui.drawee.BlurImageView
                        android:id="@+id/fm_top_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:fitsSystemWindows="true"
                        app:bgPaletteLiveData="@{ev.nowBgPalette}"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7"
                        app:loadCover="@{vm.song}" />

                    <me.qinc.lib.edgetranslucent.EdgeTransparentView
                        android:id="@+id/fm_edge_transparent_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:edge_position="top|bottom"
                        app:edge_width="200dp">

                        <com.dirror.lyricviewx.LyricViewX
                            android:id="@+id/fm_lyric_view_x"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0"
                            app:lrcHorizontalOffset="-20dp"
                            app:lrcLabel="暂无歌词"
                            app:lrcNormalTextColor="#B3B3B3"
                            app:lrcPadding="32dp"
                            app:lrcTextGravity="center"
                            app:lrcTextSize="18dp"
                            app:lrcTranslateTextScaleValue="0.8" />
                    </me.qinc.lib.edgetranslucent.EdgeTransparentView>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/fm_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:minHeight="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:menu="@menu/menu_appbar"
                        app:title="@string/default_slogan" />
                </com.lalilu.material.appbar.CollapsingToolbarLayout>
            </com.lalilu.lmusic.ui.SquareAppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nowPlayingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:paddingBottom="128dp"
                app:adapter="@{adapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="com.lalilu.material.appbar.MyScrollingViewBehavior"
                tools:listitem="@layout/item_playing" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <com.lalilu.ui.NewSeekBar
            android:id="@+id/ma_seekBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="72dp"
            app:bgPalette="@{ev.nowBgPalette}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
