<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ev"
            type="com.lalilu.lmusic.event.SharedViewModel" />

        <variable
            name="vm"
            type="com.lalilu.lmusic.fragment.viewmodel.PlayingViewModel" />

        <variable
            name="playingAdapter"
            type="com.lalilu.lmusic.adapter.PlayingAdapter" />

    </data>

    <com.lalilu.lmusic.ui.MyCoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:overScrollMode="never">

        <com.lalilu.lmusic.ui.appbar.SquareAppBarLayout
            android:id="@+id/fm_appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryVariant"
            android:fitsSystemWindows="true"
            app:bgPalette="@{ev.nowBgPalette}">
            <!-- app:layout_behavior="com.lalilu.lmusic.ui.appbar.AppBarZoomBehavior" -->
            <!-- 替换为代码调用 -->

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/fm_collapse_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:bindTitle="@{vm.title}"
                app:collapsedTitleTextAppearance="@style/collapsedTitleText"
                app:contentScrim="@android:color/transparent"
                app:expandedTitleTextAppearance="@style/expandedTitleText"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:maxLines="5"
                app:statusBarScrim="@android:color/transparent">

                <com.lalilu.lmusic.ui.drawee.BlurImageView
                    android:id="@+id/fm_top_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:fitsSystemWindows="true"
                    app:bgPaletteLiveData="@{ev.nowBgPalette}"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"
                    app:setCoverSourceUri="@{vm.mediaUri}" />

                <me.qinc.lib.edgetranslucent.EdgeTransparentView
                    android:id="@+id/fm_edge_transparent_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:edge_position="top|bottom"
                    app:edge_width="48dp">

                    <com.dirror.lyricviewx.LyricViewX
                        android:id="@+id/fm_lyric_view_x"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0"
                        app:loadLyric="@{vm.lyric}"
                        app:lrcLabel="暂无歌词"
                        app:lrcPadding="36dp"
                        app:lrcTextSize="18dp"
                        app:updateTime="@{vm.position}" />
                </me.qinc.lib.edgetranslucent.EdgeTransparentView>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/fm_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/menu_appbar"
                    app:title="@string/default_slogan" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.lalilu.lmusic.ui.appbar.SquareAppBarLayout>

        <com.lalilu.lmusic.ui.AntiMisOperationRecyclerView
            android:id="@+id/nowPlayingRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:paddingBottom="128dp"
            app:adapter="@{playingAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:setSongs="@{vm.songs}"
            tools:listitem="@layout/item_playing"
            tools:visibility="invisible" />
    </com.lalilu.lmusic.ui.MyCoordinatorLayout>
</layout>
