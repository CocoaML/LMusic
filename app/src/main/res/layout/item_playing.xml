<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.lalilu.lmusic.binding_adapter.BindAdapter" />

        <variable
            name="coverUri"
            type="android.net.Uri" />

        <variable
            name="title"
            type="String" />

        <variable
            name="artist"
            type="String" />

        <variable
            name="duration"
            type="Long" />

        <variable
            name="mimeType"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/item_click_background_daynight"
        android:theme="@style/Theme.Music">

        <com.lalilu.lmusic.ui.SamplingDraweeView
            android:id="@+id/song_album_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="20dp"
            android:scaleType="centerCrop"
            app:callerContext="@{context}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pictureUri="@{coverUri}"
            fresco:placeholderImage="@color/gray_600"
            tools:placeholderImage="@tools:sample/avatars" />

        <TextView
            android:id="@+id/song_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:letterSpacing="0.05"
            android:text="@{title}"
            android:textColor="?attr/daynight_0"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/song_singer"
            app:layout_constraintEnd_toStartOf="@+id/song_type"
            app:layout_constraintStart_toEndOf="@+id/song_album_pic"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/song_singer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:letterSpacing="0.05"
            android:text="@{artist}"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/song_duration"
            app:layout_constraintStart_toEndOf="@+id/song_album_pic"
            app:layout_constraintTop_toBottomOf="@+id/song_title"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/song_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@{BindAdapter.durationToString(duration)}"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/song_singer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/song_singer"
            tools:text="@tools:sample/date/hhmm" />

        <ImageView
            android:id="@+id/song_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:contentDescription="@string/audio_type"
            app:iconRec="@{mimeType}"
            app:layout_constraintBottom_toTopOf="@+id/song_duration"
            app:layout_constraintEnd_toEndOf="@+id/song_duration"
            app:layout_constraintStart_toStartOf="@+id/song_duration"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_flac" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
