<resources>
    <!-- Base application theme. -->
    <style name="Theme.Music" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="daynight_1">@color/day_1</item>
        <item name="daynight_0.9">@color/day_0.9</item>
        <item name="daynight_0.5">@color/day_0.5</item>
        <item name="daynight_0.1">@color/day_0.1</item>
        <item name="daynight_0">@color/day_0</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="expandedTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="collapsedTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dayNightPrimaryText">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>