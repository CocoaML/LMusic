<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Music" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 刘海挖孔等异形屏适配，横竖屏都显示内容到被裁切的区域 -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">always</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/activity_window_bg</item>

        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/daynight_0</item>
        <item name="colorControlActivated">@color/daynight_0.6</item>

        <item name="android:colorControlNormal">@android:color/white</item>
    </style>
</resources>