<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:icon="@drawable/ic_settings_4_line"
        android:title="@string/preference_player_settings">
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/sp_key_player_settings_ignore_audio_focus"
            android:title="@string/preference_player_settings_ignore_audio_focus"
            app:allowDividerBelow="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:icon="@drawable/ic_lrc_fill"
        android:title="@string/preference_lyric_settings">
        <SeekBarPreference
            android:defaultValue="12"
            android:key="@string/sp_key_lyric_settings_text_size"
            android:max="20"
            android:title="@string/preference_lyric_settings_text_size"
            app:min="5" />
        <SeekBarPreference
            android:defaultValue="10"
            android:key="@string/sp_key_lyric_settings_secondary_text_size"
            android:max="20"
            android:title="@string/preference_lyric_settings_secondary_text_size"
            app:allowDividerBelow="false"
            app:min="5" />
    </PreferenceCategory>

    <PreferenceCategory
        android:icon="@drawable/ic_scan_line"
        android:title="@string/preference_media_source_settings"
        app:allowDividerAbove="true">
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/sp_key_media_source_settings_unknown_filter"
            android:title="@string/preference_media_source_settings_unknown_filter" />
        <SeekBarPreference
            android:defaultValue="30"
            android:key="@string/sp_key_media_source_settings_duration_filter"
            android:title="@string/preference_media_source_settings_duration_filter" />
    </PreferenceCategory>

    <Preference
        android:layout="@layout/my_preference_layout"
        android:title="@string/preference_opensource_licence" />
</PreferenceScreen>